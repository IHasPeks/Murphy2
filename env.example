# MurphyAI Twitch Bot Configuration
# Copy this file to .env and fill in your actual values

# Twitch Bot Configuration (Required)
BOT_NICK=MurphyAI
TWITCH_TOKEN=oauth:your_twitch_oauth_token_here
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_INITIAL_CHANNELS=channel1,channel2

# OpenAI Configuration (Required for AI features)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Command Prefixes
TWITCH_PREFIX=?
MOD_PREFIX=\\

# Stream Schedule (24-hour format HH:MM, leave empty for no stream)
SCHEDULE_MONDAY=18:00
SCHEDULE_TUESDAY=
SCHEDULE_WEDNESDAY=
SCHEDULE_THURSDAY=
SCHEDULE_FRIDAY=20:00
SCHEDULE_SATURDAY=
SCHEDULE_SUNDAY=19:30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=murphyai.log

# Queue Configuration
DEFAULT_QUEUE_USER=
DEFAULT_TEAM_SIZE=5
DEFAULT_QUEUE_SIZE=5

# Rate Limiting
MAX_AI_REQUESTS_PER_MINUTE=20
MAX_AI_REQUESTS_PER_USER_MINUTE=3

# Environment
ENVIRONMENT=production

# How to get your tokens:
# 1. Twitch OAuth Token: https://twitchapps.com/tmi/
# 2. Twitch Client ID: https://dev.twitch.tv/console/apps
# 3. OpenAI API Key: https://platform.openai.com/api-keys
