# Twitch Bot Configuration
# Bot's Twitch username
BOT_NICK=YourBotName

# Bot's OAuth token - Get from https://twitchapps.com/tmi/
# Must include the 'oauth:' prefix
TWITCH_TOKEN=oauth:your_twitch_oauth_token_here

# Twitch Client ID - Get from https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_twitch_client_id_here

# Comma-separated list of channels for the bot to join
TWITCH_INITIAL_CHANNELS=channel1,channel2

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Command Prefixes
TWITCH_PREFIX=?
MOD_PREFIX=\

# Stream Schedule (24-hour format HH:MM)
# Leave empty for days without streams
SCHEDULE_MONDAY=18:00
SCHEDULE_TUESDAY=
SCHEDULE_WEDNESDAY=
SCHEDULE_THURSDAY=
SCHEDULE_FRIDAY=20:00
SCHEDULE_SATURDAY=
SCHEDULE_SUNDAY=19:30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=murphyai.log

# Queue Configuration (Optional)
DEFAULT_TEAM_SIZE=5
DEFAULT_QUEUE_SIZE=5

# AI Configuration (Optional)
# Model to use for AI responses (e.g., gpt-3.5-turbo, gpt-4)
OPENAI_MODEL=gpt-3.5-turbo

# Rate Limiting (Optional)
MAX_AI_REQUESTS_PER_MINUTE=20
MAX_AI_REQUESTS_PER_USER_MINUTE=3

# Development/Production Mode
# Set to 'production' for production deployment
ENVIRONMENT=development

# Optional: External monitoring
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_api_key_here
